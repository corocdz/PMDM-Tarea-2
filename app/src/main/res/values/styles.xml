<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    Archivo de estilos para definir temas y personalizaciones de componentes.
    -->

    <!-- Estilo para los nombres de los personajes -->
    <style name="CharacterName">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <!--
    `CharacterName`: Estilo para los TextViews que muestran nombres de personajes.
    - `textColor`: Negro para máxima legibilidad.
    - `textSize`: Tamaño grande (20sp) para destacar el texto.
    - `fontFamily`: Fuente sans-serif con peso medio.
    -->

    <!-- Estilo para las descripciones y habilidades de los personajes -->
    <style name="CharacterDetails">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <!--
    `CharacterDetails`: Estilo para los detalles de los personajes.
    - `textColor`: Gris oscuro para menor énfasis comparado con el nombre.
    - `textSize`: Tamaño ligeramente menor (16sp).
    - `fontFamily`: Fuente sans-serif estándar.
    -->

    <!-- Estilo para el RecyclerView -->
    <style name="RecyclerViewStyle">
        <item name="android:divider">@android:color/darker_gray</item> <!-- Cambiado a un color estándar -->
        <item name="android:dividerHeight">1dp</item>
    </style>
    <!--
    `RecyclerViewStyle`: Estilo personalizado para el RecyclerView.
    - `divider`: Color del divisor entre elementos.
    - `dividerHeight`: Altura del divisor (1dp).
    -->

</resources>

